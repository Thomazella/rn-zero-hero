{
  "env": {
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "prettier/react",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "react/jsx-filename-extension": "off"
  },
  "parser": "typescript-eslint-parser"
}
